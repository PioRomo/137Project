<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryPurple"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="-16dp">

        <Button
            android:id="@+id/biometricLoginButton"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_above="@+id/loginRegisterButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="73dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="11dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_bold"
            android:text="Login With Biometrics"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/loginLoginButton"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/biometricLoginButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_bold"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            tools:text="Login" />

        <EditText
            android:id="@+id/loginPasswordText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="484dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_bold"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/loginEmailText"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="361dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:fontFamily="@font/poppins_bold"
            android:layout_centerHorizontal="true"
            android:hint="Enter Email"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/loginEmailTitle"
            android:layout_width="111dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="318dp"
            android:layout_marginEnd="252dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/loginPasswordTitle"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="438dp"
            android:layout_marginEnd="116dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="56dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="56dp"
            app:srcCompat="@drawable/pixelpedialogo" />

        <Button
            android:id="@+id/loginRegisterButton"
            android:layout_width="416dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="17dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppins_bold"
            android:text="Don't have an account? Register here"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryPurple"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="266dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-1dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="1dp"
            app:srcCompat="@drawable/pixelpedialogowordmark" />

        <Button
            android:id="@+id/biometricLoginButton"
            android:layout_width="271dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="71dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="83dp"
            android:background="@color/PrimaryPurple"
            android:fontFamily="sans-serif-black"
            android:text="Login With Biometrics"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/loginLoginButton"
            android:layout_width="237dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="87dp"
            android:layout_marginEnd="87dp"
            android:layout_marginBottom="148dp"
            android:background="@color/PrimaryMagenta"
            android:fontFamily="sans-serif-black"
            android:text="Login"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="24dp"
            tools:text="Login" />

        <EditText
            android:id="@+id/loginPasswordText"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="484dp"
            android:layout_marginEnd="51dp"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/loginEmailText"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="361dp"
            android:layout_marginEnd="52dp"
            android:ems="10"
            android:hint="Enter Username"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/loginEmailTitle"
            android:layout_width="111dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="318dp"
            android:layout_marginEnd="252dp"
            android:fontFamily="sans-serif-black"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/loginPasswordTitle"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="73dp"
            android:layout_marginTop="438dp"
            android:layout_marginEnd="116dp"
            android:fontFamily="sans-serif-black"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/loginRegisterButton"
        android:layout_width="416dp"
        android:layout_height="48dp"
        android:background="#00FFFFFF"
        android:text="Don't have an account? Register here"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginLoginButton"
        app:layout_constraintVertical_bias="0.606" />

</androidx.constraintlayout.widget.ConstraintLayout>